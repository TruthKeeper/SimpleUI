<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--刮奖-->
    <declare-styleable name="ScratchView">
        <!--刮痕粗细-->
        <attr name="stroke" format="dimension" />
        <!--蒙层颜色-->
        <attr name="coverColor" format="color" />
        <!--触发阈值0f-1f-->
        <attr name="activity" format="float" />
    </declare-styleable>
    <!--TRatingBar-->
    <declare-styleable name="TRatingbar">
        <!--星星大小，正方形-->
        <attr name="starImageSize" format="dimension" />
        <!--左右边距-->
        <attr name="starPadding" format="dimension" />
        <!--最多数量-->
        <attr name="starSum" format="integer" />
        <!--高亮数量-->
        <attr name="starRating" format="float" />
        <!--是否可点击，默认false-->
        <attr name="starClickable" format="boolean" />
        <!--默认-->
        <attr name="starEmpty" format="reference" />
        <!--高亮-->
        <attr name="starFill" format="reference" />

    </declare-styleable>
    <!--KeepChangeLayout-->
    <declare-styleable name="KeepChangeLayout">
        <!--左-->
        <attr name="leftDrawable" format="reference" />
        <!--右-->
        <attr name="rightDrawable" format="reference" />
        <!--drawable大小-->
        <attr name="drawableSize" format="dimension" />
        <!--字体大小-->
        <attr name="textSize" format="dimension" />
        <!--字体颜色-->
        <attr name="textColor" format="color" />
        <!--最大数量限制-->
        <attr name="textSum" format="integer" />
        <!--字体左右间距总和-->
        <attr name="textPadding" format="dimension" />

    </declare-styleable>
    <!--查看全文-->
    <declare-styleable name="ExpandableTextView">
        <!--显示文本-->
        <attr name="content" format="string" />
        <!--文本颜色 default:#000000-->
        <attr name="contentColor" format="color" />
        <!--文本大小 default:14sp-->
        <attr name="contentSize" format="dimension" />
        <!--文本行间距 default:2dp-->
        <attr name="lineSpacingExtra" format="dimension" />
        <!--文本倍距 default:1.0f-->
        <attr name="lineSpacingMultiplier" format="float" />
        <!--查看全文 颜色 default:#1e85d4-->
        <attr name="indicatorTextColor" format="color" />
        <!--查看全文 大小 default:15sp-->
        <attr name="indicatorTextSize" format="dimension" />
        <!--查看全文 上间距  default:6dp-->
        <attr name="indicatorMarginTop" format="dimension" />
        <!--查看全文 位置 开始0 中间1 结束2 default:0-->
        <attr name="indicatorMode" format="integer" />
        <!--展开动画时间 default:350-->
        <attr name="during" format="integer" />
        <!--默认最小显示行数 default:3-->
        <attr name="minLines" format="integer" />
    </declare-styleable>
</resources>