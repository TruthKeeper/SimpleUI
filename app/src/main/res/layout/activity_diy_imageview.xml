<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="5.0+动态裁剪" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/round_l"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash" />

            <ImageView
                android:id="@+id/circle_l"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="画布操作兼容方案\n边缘颗粒化丢失像素" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.tk.simpleui.diyimg.RoundRectImageView
                android:id="@+id/round_fit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash" />

            <com.tk.simpleui.diyimg.CircleImageView
                android:id="@+id/round_circle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="兼容：自定义ImageView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.tk.simpleui.diyimg.ShapeRoundImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/splash" />

            <com.tk.simpleui.diyimg.ShapeCircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/splash" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.tk.simpleui.diyimg.ShapeRectImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/splash" />

            <com.tk.simpleui.diyimg.ShapeOtherImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/splash" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
